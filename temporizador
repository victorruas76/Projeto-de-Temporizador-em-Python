import time

t = input("Digite o tempo (em segundos): ")

if t.isdigit():
    t = int(t)
else:
    print("Entrada inv√°lida")
    quit()

while t:
    minutes, seconds = divmod(t, 60)
    timer = f"{minutes:02d}:{seconds:02d}"
    print(timer, end="\r")
    time.sleep(1)
    t -= 1

print("Tempo acabou!!")
